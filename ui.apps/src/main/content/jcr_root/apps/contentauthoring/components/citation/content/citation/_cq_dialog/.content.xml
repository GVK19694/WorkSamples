<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          extraClientlibs="citationCustomValidation"
          jcr:title="Citation"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <citation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Citation"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <citation-type
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                emptyOption="{Boolean}true"
                                required="{Boolean}true"
                                fieldLabel="Citation Type"
                                name="./citationType">
                                <items jcr:primaryType="nt:unstructured">
                                    <productInfo
                                        jcr:primaryType="nt:unstructured"
                                        text="Product Info"
                                        value="product-info"/>
                                    <generic
                                        jcr:primaryType="nt:unstructured"
                                        text="Generic"
                                        value="generic"/>
                                    <book
                                        jcr:primaryType="nt:unstructured"
                                        text="Book"
                                        value="book"/>
                                    <journal
                                        jcr:primaryType="nt:unstructured"
                                        text="Journal"
                                        value="journal"/>
                                    <electronic
                                        jcr:primaryType="nt:unstructured"
                                        text="Electronic"
                                        value="electronic"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".citationType-showhide-target"/>
                            </citation-type>
                            <publication-date
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}true"
                                fieldLabel="Publication Date"
                                name="./publicationDate"/>
                            <product-info1
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <city
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="City"
                                        name="./cityProductInfo"/>
                                    <state
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="State"
                                        name="./stateProductInfo"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="product-info"/>
                            </product-info1>
                            <generic1
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <city
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="City"
                                        name="./cityGeneric"/>
                                    <state
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="State"
                                        name="./stateGeneric"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="generic"/>
                            </generic1>
                            <book1
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <city
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="City"
                                        name="./cityBook"/>
                                    <state
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="State"
                                        name="./stateBook"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="book"/>
                            </book1>
                            <journal1
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <city
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="City"
                                        name="./cityJournal"/>
                                    <state
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="State"
                                        name="./stateJournal"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="journal"/>
                            </journal1>
                            <electronic1
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <city
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="City"
                                        name="./cityElectronic"/>
                                    <state
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="State"
                                        name="./stateElectronic"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="electronic"/>
                            </electronic1>
                            <country
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}false"
                                fieldLabel="Country"
                                name="./country"/>
                            <comment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}false"
                                fieldLabel="Comment"
                                name="./comment"/>
                            <product-info2
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <brand-name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Brand Name"
                                        name="./brandName"/>
                                    <generic-name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Generic Name"
                                        name="./genericName"/>
                                    <manufacturer
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Manufacturer"
                                        name="./manufacturer"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="product-info"/>
                            </product-info2>
                            <generic2
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Author"
                                        name="./author"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Title"
                                        name="./titleGeneric"/>
                                    <source
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Source"
                                        name="./source"/>
                                    <inline
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Inline"
                                        name="./inline"/>
                                    <citref-text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Citref text"
                                        name="./citrefText"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="generic"/>
                            </generic2>
                            <book2
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <first-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="First Author"
                                        name="./firstAuthorBook"/>
                                    <second-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Second Author"
                                        name="./secondAuthorBook"/>
                                    <third-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Third Author"
                                        name="./thirdAuthorBook"/>
                                    <et-al
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        text="Et al"
                                        name="./etalEnabledBook"
                                        checked="false"
                                        value="true"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Title"
                                        name="./titleBook"/>
                                    <volume-issue
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Volume Issue"
                                        name="./volumeIssueBook"/>
                                    <publisher-name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Publisher Name"
                                        name="./publisherNameBook"/>
                                    <documentation-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Documentation Type"
                                        name="./documentationTypeBook"/>
                                    <pages
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Pages"
                                        name="./pagesBook"/>
                                    <editors
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Editors"
                                        name="./editors"/>
                                    <edition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Edition"
                                        name="./edition"/>
                                    <chapter-title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Chapter Title"
                                        name="./chapterTitle"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="book"/>
                            </book2>
                            <journal2
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <first-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="First Author"
                                        name="./firstAuthorJournal"/>
                                    <second-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Second Author"
                                        name="./secondAuthorJournal"/>
                                    <third-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Third Author"
                                        name="./thirdAuthorJournal"/>
                                    <et-al
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        text="Et al"
                                        name="./etalEnabledJournal"
                                        checked="false"
                                        value="true"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Title"
                                        name="./titleJournal"/>
                                    <volume-issue
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Volume Issue"
                                        name="./volumeIssueJournal"/>
                                    <publisher-name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Publisher Name"
                                        name="./publisherNameJournal"/>
                                    <documentation-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Documentation Type"
                                        name="./documentationTypeJournal"/>
                                    <pages
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Pages"
                                        name="./pagesJournal"/>
                                    <journal-abbreviation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Journal Abbreviation"
                                        name="./journalAbbreviation"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="journal"/>
                            </journal2>
                            <electronic2
                                granite:class="citationType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <first-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="First Author"
                                        name="./firstAuthorElectronic"/>
                                    <second-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Second Author"
                                        name="./secondAuthorElectronic"/>
                                    <third-author
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Third Author"
                                        name="./thirdAuthorElectronic"/>
                                    <et-al
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        text="Et al"
                                        name="./etalEnabledElectronic"
                                        checked="false"
                                        value="true"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Title"
                                        name="./titleElectronic"/>
                                    <volume-issue
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Volume Issue"
                                        name="./volumeIssueElectronic"/>
                                    <publisher-name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Publisher Name"
                                        name="./publisherNameElectronic"/>
                                    <documentation-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Documentation Type"
                                        name="./documentationTypeElectronic"/>
                                    <pages
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}false"
                                        fieldLabel="Pages"
                                        name="./pagesElectronic"/>
                                    <url
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="URL"
                                        name="./url"/>
                                    <accessed-on
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        required="{Boolean}true"
                                        fieldLabel="Accessed On"
                                        validation="accessedOnValidation"
                                        emptyText="Please provide the date format like this mm/dd/yyyy"
                                        name="./accessedOn">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            validationpattern="^([0]?[1-9]|[1][0-2])[/]([0]?[1-9]|[1|2][0-9]|[3][0|1])[/]([0-9]{4})$"
                                            validationmessage="Please provide the correct date format mm/dd/yyyy"/>
                                    </accessed-on>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="electronic"/>
                            </electronic2>
                        </items>
                    </citation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>